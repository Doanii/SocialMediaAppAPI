<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/nav.js"></script>
</head>
<body class="h-screen max-h-screen flex flex-col">
    <header class="py-2 fixed z-10 bg-white w-full">
        <ul class="flex uppercase text-2xl w-full justify-center gap-8">
            @await Html.PartialAsync("NavLink", new NavLink("Dashboard", "/"))
        </ul>
    </header>
    <main role="main" class="bg-gray-400 w-full h-full p-6 pt-20">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
