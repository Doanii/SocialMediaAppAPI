@{
    ViewData["Title"] = "Home Page";
}

<div class="grid grid-cols-1 gap-6 h-full lg:grid-cols-3">
    <div class="grid grid-rows-6 gap-6 h-full lg:col-span-2">
        <div class="bg-white/50 backdrop-blur-2xl p-6 rounded w-full h-full row-span-2 sm:row-span-3">
            Hier komen charts
        </div>
        <div class="grid row-span-2 sm:row-span-1 sm:grid-cols-3 gap-6">
            <div class="hidden sm:block"></div>
            <div class="bg-white/50 backdrop-blur-2xl p-6 rounded w-full h-full uppercase text-sm">
                <div class="font-black text-green-700 text-xl" id="UserCount">0</div>
                total users
            </div>
            <div class="bg-white/50 backdrop-blur-2xl p-6 rounded w-full h-full uppercase text-sm">
                <div class="font-black text-green-700 text-xl"><span id="TotalPostsCount">0</span> / <span id="NewPostsToday">0</span></div>
                total posts / total posts today
            </div>
        </div>
        <div class="row-span-2 sm:row-span-3 bg-white/50 backdrop-blur-2xl p-6 rounded w-full h-full order-first lg:order-none flex flex-row gap-6">
            <div class="w-full h-full flex flex-col">
                <div class="font-bold text-lg mb-4">Meest actieve gebruikers</div>
                <div id="mostActiveUsers" class="flex-grow bg-white/50 backdrop-blur-2xl p-6 rounded overflow-y-scroll">
                </div>
            </div>
            <div class="w-full h-full flex flex-col">
                <div class="font-bold text-lg mb-4">Populairste berichten</div>
                <div id="mostPopulairPosts" class="h-full flex-grow bg-white/50 backdrop-blur-2xl p-6 rounded overflow-y-scroll">
                </div>
            </div>
        </div>
    </div>
    <div id="postsContainer" class="bg-white/50 backdrop-blur-2xl p-6 rounded w-full h-full order-first lg:order-none flex flex-col gap-6 overflow-y-scroll">
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/dashboard.js"></script>